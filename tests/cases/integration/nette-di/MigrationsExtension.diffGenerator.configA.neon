extensions:
	migrations: Nextras\Migrations\Bridges\NetteDI\MigrationsExtension

migrations:
	dir: migrations
	dbal: doctrine
	driver: mysql
	diffGenerator: doctrine

services:
	- Doctrine\ORM\ORMSetup::createXMLMetadataConfiguration([%doctrineDir%], true)
	- Doctrine\DBAL\DriverManager::getConnection(%doctrineConfig%, @Doctrine\ORM\Configuration)
	-
		type: Doctrine\ORM\EntityManagerInterface
		factory: Doctrine\ORM\EntityManager::create(@Doctrine\DBAL\Connection, @Doctrine\ORM\Configuration)
